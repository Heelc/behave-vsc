{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug: MY WORKSPACE",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/../my-project",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Debug: Simple workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/simple",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Debug: Project 1 workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/project 1",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Debug: Project 2 workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/project 2",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Debug: Bad Import workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/bad import",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Debug: MultiRoot workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/multiroot.code-workspace",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Run Test Suite: Project 1 workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/project 1",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/project 1 suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js",
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "tasks: watch-tests",
		},
		{
			"name": "Run Test Suite: Project 2 workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/project 2",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/project 2 suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js",
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "tasks: watch-tests",
		},
		{
			"name": "Run Test Suite: Simple workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/simple",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/simple suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js",
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "tasks: watch-tests",
		},
		{
			"name": "Run Test Suite: MultiRoot workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/multiroot.code-workspace",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/multiroot suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js",
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "tasks: watch-tests",
		},
	]
}