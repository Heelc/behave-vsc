{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Extension - MY PROJECT",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/../mesh-to-cloud",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Debug Extension - Workspace 1",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/project-1",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Debug Extension - Workspace 2",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/project-2",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Debug Extension - Workspace Simple",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/project simple",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Debug Extension - Workspace MultiRoot",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/multiroot.code-workspace",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Run Extension Test Suite - Workspace 1",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/project-1",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/workspace-1-suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js",
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "tasks: watch-tests",
		},
		{
			"name": "Run Extension Test Suite - Workspace 2",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/project-2",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/workspace-2-suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js",
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "tasks: watch-tests",
		},
		{
			"name": "Run Extension Test Suite - Workspace Simple",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/project simple",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/workspace-simple-suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js",
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "tasks: watch-tests",
		},
		{
			"name": "Run Extension Test Suite - Workspace MultiRoot",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/multiroot.code-workspace",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/workspace-multiroot-suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js",
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "tasks: watch-tests",
		},
	]
}