{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Extension: MY PROJECT",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/../mesh-to-cloud",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Debug Extension: Simple",
			"type": "extensionHost",
