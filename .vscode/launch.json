// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Extension - Workspace 1",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-project-workspace-1",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
			"justMyCode": true,
		},
		{
			"name": "Debug Extension - Workspace 2",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-project-workspace-2",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
			"justMyCode": true,
		},
		{
			"name": "Debug Extension - Workspace MultiRoot",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-project-workspace-multiroot/workspace.code-workspace",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
			"justMyCode": true,
		},
		{
			"name": "Debug Extension - My Project",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/../myproject",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
			"justMyCode": true,
		},
		{
			"name": "Run Extension Test Suite - Workspace 1",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-project-workspace-1",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/workspace-1-suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js",
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "tasks: watch-tests",
		},
		{
			"name": "Run Extension Test Suite - Workspace 2",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-project-workspace-2",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/workspace-2-suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js",
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "tasks: watch-tests",
		},
		{
			"name": "Run Extension Test Suite - Workspace MultiRoot",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"${workspaceFolder}/example-project-workspace-multiroot/workspace.code-workspace",
				"--extensionTestsPath=${workspaceFolder}/out/test/workspace-multiroot-suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js",
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "tasks: watch-tests",
		},
	]
}